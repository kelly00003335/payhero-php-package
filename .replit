modules = ["php-8.2"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 43000322
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "lsof -i :8080 -t | xargs kill -9 2>/dev/null; php -S 0.0.0.0:8080"

[[workflows.workflow]]
name = "Run Examples"
author = 43000322
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php examples.php"

[[ports]]
localPort = 8080
externalPort = 80

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:8080"]
