modules = ["php-8.2"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 43000322
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t ."

[[workflows.workflow]]
name = "Run Examples"
author = 43000322
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php examples.php"

[[workflows.workflow]]
name = "Deploy to Render"
author = 43016551
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php deploy.php"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 80

[deployment]
run = ["sh", "-c", "php -S 0.0.0.0:$PORT -t ."]
